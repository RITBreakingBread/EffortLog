<div class="page-header">
  <h1>
    Effort Log Report
    <small>Most recent on top</small>
  </h1>
</div>

<div class="btn-group" role="group" aria-label="...">
  <a type="button" class="btn btn-default" href="/">All</a>
  <a type="button" class="btn btn-default" href="/effort_logs/week_report/1">Week 1</a>
  <a type="button" class="btn btn-default" href="/effort_logs/week_report/2">Week 2</a>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Recorded</th>
      <th>Card</th>
      <th>Comment</th>
    </tr>



    <% @logs.each do |log| %>
        <tr>
          <td><%= log.real_name %></td>
          <td><%= log.hours.to_f %></td>
          <td><%= log.start_time.in_time_zone('Eastern Time (US & Canada)').strftime("%-m/%-d/%Y @ %l:%M %P") %>
          <td><a href="<%= log.url %>" target="_blank">View Card</a></td>
          <td><%= log.comment %></td>
        </tr>
    <% end %>
  </table>
  <%= will_paginate @logs %>
</div>
